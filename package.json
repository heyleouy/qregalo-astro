{
  "name": "qregalo-catalog",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node scripts/postinstall-rollup.js",
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "build:vercel": "cd apps/web && npm run build",
    "install:vercel": "npm install && npm install @rollup/rollup-linux-x64-gnu@4.57.0 --workspace=@qregalo/web --save-dev || true",
    "db:migrate": "supabase migration up",
    "db:seed": "tsx supabase/seed/index.ts",
    "db:reset": "supabase db reset",
    "db:check:local": "node scripts/check-db-local.js",
    "db:check:prod": "node scripts/check-db-prod.js",
    "db:seed:prod": "./scripts/seed-production.sh",
    "verify:env": "node scripts/verify-env.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "glob": "^10.0.0"
  }
}
