---
import Layout from "@/layouts/Layout.astro";
import ProductCard from "@/components/ProductCard";
import { createQregaloClient } from "@qregalo/api-client";
import { createAIProvider } from "@qregalo/ai";
import { mapParseResultToSearchRequest } from "@qregalo/domain";
import { AnalyticsTracker } from "@qregalo/analytics";
import { AI_PROVIDERS } from "@qregalo/shared";
import { getSupabaseConfig } from "@/utils/env";

const { url: supabaseUrl, anonKey: supabaseKey } = getSupabaseConfig();
const client = createQregaloClient({ url: supabaseUrl, anonKey: supabaseKey });
const tracker = new AnalyticsTracker(client);
const localAIProvider = createAIProvider(AI_PROVIDERS.LOCAL);

const query = Astro.url.searchParams.get("q") || "";
let products = [];
let sessionId = "";
let error = null;

// Helper to check if error is a Supabase connection error
function isSupabaseConnectionError(error: any): boolean {
  if (!error) return false;
  const message = (error.message || error.toString() || "").toLowerCase();
  const code = error.code || "";
  
  return (
    message.includes("could not translate host name") ||
    message.includes("name or service not known") ||
    message.includes("database connection error") ||
    message.includes("could not query the database") ||
    code === "PGRST000" ||
    code === "PGRST002" ||
    message.includes("fetch failed") ||
    message.includes("network")
  );
}

if (query) {
  try {
    let parseResult;
    let supabaseAvailable = true;
    
    // Try to call AI parse edge function first
    try {
      const aiParseUrl = `${supabaseUrl}/functions/v1/ai-parse`;
      const parseResponse = await fetch(aiParseUrl, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Authorization: `Bearer ${supabaseKey}`,
          apikey: supabaseKey,
        },
        body: JSON.stringify({ query }),
      });

      if (parseResponse.ok) {
        parseResult = await parseResponse.json();
      } else {
        // If edge function fails (401, 404, etc.), use local fallback
        supabaseAvailable = false;
        parseResult = await localAIProvider.parseGiftQuery(query);
      }
    } catch (fetchError) {
      // If fetch fails (network error, function not deployed, etc.), use local fallback
      supabaseAvailable = false;
      parseResult = await localAIProvider.parseGiftQuery(query);
    }

    // Map to search request
    const searchRequest = mapParseResultToSearchRequest(parseResult);

    // Search products - handle Supabase connection errors gracefully
    try {
      const searchResponse = await client.searchProducts(searchRequest);
      products = searchResponse.products;
    } catch (searchError) {
      if (isSupabaseConnectionError(searchError)) {
        // If Supabase is not available, show empty results with helpful message
        products = [];
        error = "Supabase no está disponible. Por favor, asegúrate de que Docker Desktop esté corriendo y ejecuta 'supabase start' en la terminal.";
      } else {
        throw searchError;
      }
    }

    // Track search (don't fail if tracking fails or Supabase is unavailable)
    if (supabaseAvailable && products.length > 0) {
      try {
        sessionId = await tracker.trackSearch(query, parseResult, products.length);
      } catch (trackError) {
        // Silently ignore tracking errors - they're not critical
        if (!isSupabaseConnectionError(trackError)) {
          console.warn("Failed to track search:", trackError);
        }
      }
    }
  } catch (e) {
    // Provide user-friendly error messages
    if (isSupabaseConnectionError(e)) {
      error = "Supabase no está disponible. Por favor, asegúrate de que Docker Desktop esté corriendo y ejecuta 'supabase start' en la terminal.";
    } else if (e instanceof Error) {
      error = e.message;
    } else {
      error = "Error desconocido al buscar productos";
    }
    console.error("Search error:", e);
  }
}
---

<Layout title="Resultados de búsqueda - Qué Regalo?">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {query && (
      <div class="mb-6">
        <p class="text-sm text-gray-600 mb-2">Buscaste:</p>
        <p class="text-lg font-semibold text-gray-900">"{query}"</p>
      </div>
    )}

    {error && (
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <p class="text-red-800 font-semibold mb-2">Error al buscar productos</p>
        <p class="text-red-700 text-sm">{error}</p>
        {error.includes("Supabase no está disponible") && (
          <div class="mt-3 text-sm text-red-600">
            <p class="font-medium mb-1">Para solucionarlo:</p>
            <ol class="list-decimal list-inside space-y-1 ml-2">
              <li>Abre Docker Desktop y asegúrate de que esté corriendo</li>
              <li>Ejecuta en la terminal: <code class="bg-red-100 px-1 rounded">supabase start</code></li>
              <li>Espera a que los contenedores se inicien</li>
              <li>Recarga esta página</li>
            </ol>
          </div>
        )}
      </div>
    )}

    {!query && (
      <div class="text-center py-12">
        <p class="text-gray-600 mb-4">Ingresa una búsqueda para ver resultados</p>
        <a href="/" class="text-blue-600 hover:text-blue-700 underline">
          Volver al inicio
        </a>
      </div>
    )}

    {query && !error && products.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-600 mb-4">No se encontraron productos</p>
        <a href="/" class="text-blue-600 hover:text-blue-700 underline">
          Intentar otra búsqueda
        </a>
      </div>
    )}

    {products.length > 0 && (
      <div>
        <p class="text-sm text-gray-600 mb-6">
          Se encontraron {products.length} producto{products.length !== 1 ? "s" : ""}
        </p>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {products.map((product) => (
            <ProductCard
              product={product}
              sessionId={sessionId}
              client:load
            />
          ))}
        </div>
      </div>
    )}
  </div>
</Layout>
